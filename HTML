<html>
<head>
<title>Tic Tac Toe AI</title>
<style>
body { font-family: Arial; text-align:center; }
.board { display:grid; grid-template-columns:repeat(3,100px); gap:5px; justify-content:center; }
.cell { width:100px; height:100px; font-size:40px; display:flex; align-items:center; justify-content:center; background:#eee; cursor:pointer; }
</style>
<link rel="stylesheet" href="style.css">

</head>
<body>

<h2>Tic Tac Toe (vs Computer)</h2>
<div id="status">Your Turn (X)</div>
<div class="board" id="board"></div>
<button onclick="restart()">Restart</button>

<script>
let board = ["","","","","","","","",""];
let currentPlayer = "X";
let gameActive = true;

const winPatterns = [
[0,1,2],[3,4,5],[6,7,8],
[0,3,6],[1,4,7],[2,5,8],
[0,4,8],[2,4,6]
];

const boardDiv = document.getElementById("board");
for(let i=0;i<9;i++){
let cell=document.createElement("div");
cell.classList.add("cell");
cell.dataset.index=i;
cell.onclick=playerMove;
boardDiv.appendChild(cell);
}

function playerMove(e){
let i=e.target.dataset.index;
if(board[i]!==""||!gameActive) return;

board[i]="X";
e.target.textContent="X";
checkGame();

if(gameActive) computerMove();
}

function computerMove(){
let empty=board.map((v,i)=>v===""?i:null).filter(v=>v!==null);
let move=empty[Math.floor(Math.random()*empty.length)];
board[move]="O";
boardDiv.children[move].textContent="O";
checkGame();
}

function checkGame(){
for(let p of winPatterns){
let [a,b,c]=p;
if(board[a] && board[a]===board[b] && board[a]===board[c]){
document.getElementById("status").textContent=board[a]+" Wins!";
gameActive=false;
return;
}
}
if(!board.includes("")){
document.getElementById("status").textContent="Draw!";
gameActive=false;
}
}

function restart(){
board=["","","","","","","","",""];
gameActive=true;
document.getElementById("status").textContent="Your Turn (X)";
[...boardDiv.children].forEach(c=>c.textContent="");

}
</script>
<script src="script.js"></script>

</body>
</html>
